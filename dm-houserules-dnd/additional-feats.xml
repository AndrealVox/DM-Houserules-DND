   <element name="Extra Options" type="Option" source="DM Houserules" id="ID_DM_HOUSERULES_EXTRA_OPTION">
      <description>Some DMs may allow the use of extra options. Check this if your DM does.</description>
      <sheet display="false" />
      <setters>
         <set name="default">true</set>
      </setters>
      <rules>
         <select type="Feat" name="Free Feat (Level 5)" level="5" />
         <select type="Feat" name="Free Feat (Level 10)" level="10" />
         <select type="Feat" name="Free Feat (Level 15)" level="15" />
         <select type="Feat" name="Free Feat (Level 20)" level="20" />
      </rules>
   </element>

